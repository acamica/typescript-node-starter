{
  "name": "typescript-node-starter",
  "version": "0.0.1",
  "description": "Empty project with all that you need to start a generic node app",
  "main": "dist/index.js",
  "author": "Hernan Rajchert <hrajchert@gmail.com>",
  "license": "MIT",
  "scripts": {
    "commitmsg": "validate-commit-msg",
    "precommit": "run-s lint:*",
    "prepush": "run-s build-and:test",
    "lint:ts": "tslint --project tsconfig.json",
    "lint-and-fix:-ts": "tslint --project tsconfig.json --fix",
    "start": "node dist/index.js",
    "build": "rm -Rf dist;tsc",
    "test": "mocha dist/**/*.test.js",
    "tdd": "run-p watch:*",
    "build-and:test": "run-s build test",
    "build-and:start": "run-s build start",
    "watch:ts": "tsc -w",
    "watch:test": "mocha dist/**/*.test.js -w --growl"
  },
  "dependencies": {
    "typescript": "^2.2.2"
  },
  "devDependencies": {
    "@types/chai": "^3.5.1",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.12",
    "chai": "^3.5.0",
    "husky": "^0.13.3",
    "mocha": "^3.2.0",
    "npm-run-all": "^4.0.2",
    "sinon": "^2.1.0",
    "tslint": "^5.1.0",
    "tslint-config-acamica": "^1.0.1",
    "validate-commit-msg": "^2.12.1"
  }
}
